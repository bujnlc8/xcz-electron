{
  "name": "xcz",
  "version": "1.0.0",
  "description": "西窗烛客户端",
  "main": "main.js",
  "scripts": {
    "start": "electron main.js",
    "release": "electron-builder"
  },
  "keywords": [
    "西窗烛"
  ],
  "author": "linghaihui",
  "license": "MIT",
  "devDependencies": {
    "electron": "^13.1.0",
    "electron-builder": "^22.10.5",
    "electron-icon-maker": "^0.0.5"
  },
  "build": {
    "appId": "site.haihui.xcz",
    "productName": "西窗烛",
    "asar": true,
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "icons/icons/mac/icon.icns"
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "icon": "icons/icons/win/icon.ico"
    }
  },
  "dependencies": {
    "robotjs": "^0.6.0"
  }
}
